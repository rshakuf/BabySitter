<UserControl x:Class="BabySitter.KidInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BabySitter"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="200">
    <Grid>
        <Border Background="White"
            CornerRadius="15"
            Padding="15"
            Margin="10">

            <StackPanel>

                <TextBlock Text="פרטי ילד"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

                <TextBlock Text="שם הילד"/>
                <TextBox x:Name="KidNameTextBox"
                     Height="35"
                     Margin="0,5"/>

                <TextBlock Text="גיל"/>
                <TextBox x:Name="KidAgeTextBox"
                     Height="35"
                     Margin="0,5"/>

                <TextBlock Text="הערות"/>
                <TextBox x:Name="NotesTextBox"
                     Height="35"
                     Margin="0,5"/>

                <Button Content="שמור ילד"
                    Height="40"
                    Margin="0,10,0,0"
                    Background="Black"
                    Foreground="White"
                    Click="SaveKid_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
