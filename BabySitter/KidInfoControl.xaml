<UserControl x:Class="BabySitter.KidInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Border Background="White"
                CornerRadius="15"
                Padding="15"
                Margin="10"
                Width="200">

            <StackPanel>

                <TextBlock Text="פרטי ילד"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="שם פרטי"/>
                <TextBox x:Name="FirstNameTextBox"
                         Height="35"
                         Margin="0,5"/>

                <TextBlock Text="שם משפחה"/>
                <TextBox x:Name="LastNameTextBox"
                         Height="35"
                         Margin="0,5"/>

                <TextBlock Text="תאריך לידה"/>
                <DatePicker x:Name="BirthDatePicker"
                            Height="35"
                            Margin="0,5"/>

                <TextBlock Text="עיר"/>
                <TextBox x:Name="CityTextBox"
                         Height="35"
                         Margin="0,5"/>

                <Button Content="שמור ילד"
                        Height="40"
                        Margin="0,12,0,0"
                        Background="Black"
                        Foreground="White"
                        Click="SaveKid_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>