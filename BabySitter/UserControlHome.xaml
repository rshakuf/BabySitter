<UserControl x:Class="BabySitter.UserControlHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250"
             Margin="12"
             FlowDirection="RightToLeft">

    <Border Background="White"
            CornerRadius="16"
            Padding="16">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              Color="Black"
                              Opacity="0.08"
                              ShadowDepth="4"
                              Direction="270"/>
        </Border.Effect>

        <StackPanel>

            <!-- Header -->
            <DockPanel Margin="0,0,0,16">

                <!-- עיגול אות ראשונה -->
                <Border Width="45"
                        Height="45"
                        Background="#6750A4"
                        CornerRadius="22.5"
                        DockPanel.Dock="Right"
                        Margin="10,0,0,0">

                    <TextBlock Text="{Binding FirstName[0]}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </Border>

                <!-- שם ועיר -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#1C1B1F">
                        <Run Text="{Binding FirstName}" />
                        <Run Text=" " />
                        <Run Text="{Binding LastName}" />
                    </TextBlock>

                    <TextBlock Text="{Binding CityNameId.CityName}"
                               FontSize="12"
                               Foreground="#49454F"/>
                </StackPanel>
            </DockPanel>

            <Separator Background="#F1F2F6" Margin="0,0,0,16"/>

            <!-- מחיר + גיל -->
            <WrapPanel Margin="0,0,0,20">

                <!-- מחיר -->
                <Border Background="#E8DEF8"
                        Padding="8,4"
                        CornerRadius="8"
                        Margin="0,0,8,4">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="₪"
                                   FontSize="12"
                                   Foreground="#1D192B"
                                   VerticalAlignment="Center"
                                   Margin="0,0,2,0"/>

                        <TextBlock Text="{Binding PriceForAnHour}"
                                   FontWeight="Bold"
                                   Foreground="#1D192B"/>

                        <TextBlock Text="/שעה"
                                   FontSize="11"
                                   Foreground="#1D192B"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- גיל -->
                <Border Background="#F4F4F9"
                        Padding="8,4"
                        CornerRadius="8">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="גיל: "
                                   FontSize="11"
                                   Foreground="#49454F"/>

                        <TextBlock Text="{Binding DateOfBirth, Converter={StaticResource AgeConverter}}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#49454F"/>
                    </StackPanel>
                </Border>

            </WrapPanel>

            <!-- כפתור -->
            <Button Content="לפרטים נוספים"
                    Click="Details_Click"
                    Height="40"
                    Background="#6750A4"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    BorderThickness="0">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>

                <Button.Effect>
                    <DropShadowEffect BlurRadius="8"
                                      Color="#6750A4"
                                      Opacity="0.3"
                                      ShadowDepth="2"/>
                </Button.Effect>

            </Button>

        </StackPanel>
    </Border>
</UserControl>
