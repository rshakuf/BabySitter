<Page x:Class="BabySitter.Pages.LogInComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      Title="LogInComputer"
      FontFamily="Segoe UI">

    <!-- ⭐ RESOURCES MUST BE FIRST -->
    <Page.Resources>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#8E44AD"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="#8E44AD"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F5F0F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="50,0">
            <TextBlock Text="BABYSITTING FOR LIFE"
                       FontSize="14" FontWeight="Bold" Foreground="#A58FAA"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Leave finding a&#x0a;babysitter to us"
                       FontSize="42" FontWeight="ExtraBold" Foreground="#2D2D2D"
                       LineHeight="46"/>

            <TextBlock Text="Wanna go out but can't leave the kids? Or looking for an easy job watching little ones? We've got the perfect match for you."
                       FontSize="16" Foreground="#666666" Margin="0,20,0,30"
                       TextWrapping="Wrap" LineHeight="22"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="ParentRegisterButton"
                        Content="Parent Sign Up"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="140" Height="40"
                        Click="ParentRegisterButton_Click"
                        Margin="0,0,10,0"/>

                <Button x:Name="BabysitterRegisterButton"
                        Content="Sitter Sign Up"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="140" Height="40"
                        Click="BabysitterRegisterButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1">
            <Ellipse Fill="#E8D5E8"
                     Width="400" Height="400"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0,0,-100,-100"/>

            <Border Background="White"
                    CornerRadius="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="350"
                    Padding="40"
                    Margin="20">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="30"
                                      Color="#D0D0D0"
                                      Opacity="0.5"
                                      ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Welcome Back"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="Please login to your account"
                               FontSize="14"
                               Foreground="#888"
                               Margin="0,0,0,25"/>

                    <TextBlock Text="Telephone"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A4A4A"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="userNameTextBox"
                             Height="40"
                             Padding="10,8"
                             Margin="0,0,0,15"
                             BorderThickness="1"
                             BorderBrush="#DDD"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="Password"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A4A4A"
                               Margin="0,0,0,5"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Height="40"
                                 Padding="10,8"
                                 Margin="0,0,0,20"
                                 BorderThickness="1"
                                 BorderBrush="#DDD"
                                 VerticalContentAlignment="Center"/>

                    <Button x:Name="LogInButton"
                            Content="Login"
                            Background="#8E44AD"
                            Foreground="White"
                            Height="45"
                            FontWeight="Bold"
                            Click="LogInButton_Click"/>

                    <Separator Margin="0,25" Background="#EEE"/>

                    <Button x:Name="AutoFillButton"
                            Content="⚡ Parent Auto-Login"
                            Background="Transparent"
                            BorderBrush="#DDD"
                            FontSize="11"
                            Height="30"
                            Margin="0,0,0,8"
                            Click="AutoFillButton_Click"/>

                    <Button x:Name="AutoFillBabysitterButton"
                            Content="⚡ Sitter Auto-Login"
                            Background="Transparent"
                            BorderBrush="#DDD"
                            FontSize="11"
                            Height="30"
                            Click="AutoFillBabysitterButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.ColumnSpan="2"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Orientation="Horizontal">

            <TextBlock Text="Call the "
                       FontSize="20"
                       FontStyle="Italic"
                       Foreground="#A58FAA"/>

            <TextBlock Text="NANNY"
                       FontSize="20"
                       FontWeight="Black"
                       Foreground="#8E44AD"/>
        </StackPanel>
    </Grid>
</Page>
