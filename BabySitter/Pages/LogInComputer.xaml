<Page x:Class="BabySitter.Pages.LogInComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BabySitter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="LogInComputer">

    <Grid Background="#E8D5E8">

        <!-- Title at top -->
        <TextBlock Text="BabySitting for life"
                   FontSize="28"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   Foreground="#4A4A4A"/>

        <!-- Main heading on left -->
        <TextBlock Text="Leave finding a"
                   FontSize="48"
                   FontWeight="Bold"
                   FontFamily="Georgia"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="35,100,0,0"
                   Foreground="#2C2C2C"/>

        <TextBlock Text="babysitter to us"
                   FontSize="48"
                   FontWeight="Bold"
                   FontFamily="Georgia"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="35,155,0,0"
                   Foreground="#2C2C2C"/>

        <!-- Description text -->
        <TextBlock Text="Wanna go out but you can't leave the kids alone in the house?&#x0a;we have just the solution for you!&#x0a;Wanna find an easy job and all you gotta do is watch a few kids?&#x0a;we have just the solution for you!"
                   FontSize="12"
                   FontStyle="Italic"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="48,230,0,0"
                   Foreground="#4A4A4A"
                   TextWrapping="Wrap"
                   Width="300"/>

        <!-- UserName label and textbox -->
        <TextBlock Text="Telephone:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="500,130,0,0"
                   Foreground="#4A4A4A"/>

        <TextBox x:Name="userNameTextBox"
                 Width="160"
                 Height="30"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="500,155,0,0"
                 Padding="8"
                 BorderThickness="1"
                 BorderBrush="#D0D0D0"
                 Background="White"/>

        <!-- Password label and passwordbox -->
        <TextBlock Text="Password:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="500,215,0,0"
                   Foreground="#4A4A4A"/>

        <PasswordBox x:Name="PasswordBox"
                     Width="160"
                     Height="30"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="500,240,0,0"
                     Padding="8"
                     BorderThickness="1"
                     BorderBrush="#D0D0D0"
                     Background="White"/>

   
        <Button x:Name="LogInButton"
                Content="Log In"
                Width="100"
                Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="530,295,0,0"
                FontWeight="SemiBold"
                Background="White"
                BorderBrush="#6B2C2C"
                BorderThickness="2"
                Cursor="Hand"
                Click="LogInButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="18"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="AutoFillButton"
        Content="⚡ Auto Login for parents"
        Width="160"
        Height="30"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="500,340,0,0"
        FontSize="12"
        Background="AliceBlue"
        BorderBrush="BlueViolet"
        BorderThickness="1"
        Cursor="Hand"
        Click="AutoFillButton_Click"/>
        
        <Button x:Name="AutoFillBabysitterButton"
        Content="⚡ Auto Login for Babysitter"
        Width="190"
        Height="30"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="500,375,0,0"
        FontSize="12"
        Background="#D6EAF8"
        BorderBrush="#3498DB"
        BorderThickness="1"
        Cursor="Hand"
        Click="AutoFillBabysitterButton_Click"/>


        <!-- Parent Register button at bottom left -->
        <Button x:Name="ParentRegisterButton"
                Content="Parent Register"
                Width="140"
                Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="62,380,0,0"
                FontWeight="SemiBold"
                Background="White"
                BorderBrush="#6B2C2C"
                BorderThickness="2"
                Cursor="Hand"
                Click="ParentRegisterButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="18"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Babysitter Register button at bottom left -->
        <Button x:Name="BabysitterRegisterButton"
                Content="Babysitter Register"
                Width="140"
                Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="62,425,0,0"
                FontWeight="SemiBold"
                Background="White"
                BorderBrush="#6B2C2C"
                BorderThickness="2"
                Cursor="Hand"
                Click="BabysitterRegisterButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="18"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Call the NANNY text at bottom center -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,50"
                   FontSize="36"
                   Foreground="#4A4A4A">
            <Run Text="Call the " FontStyle="Italic"/>
            <Run Text="NANNY" FontWeight="Bold" Foreground="#FFB4C8"/>
        </TextBlock>

    </Grid>
</Page>
