<Page x:Class="BabySitter.Pages.ChildOfParents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Children Profiles" 
      Background="#F4F7FC" 
      FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="40,30,40,40" CornerRadius="0,0,30,30" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#667EEA" Offset="0.0" />
                    <GradientStop Color="#764BA2" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.15" Direction="270" Color="Black"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Children Profiles" FontSize="36" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="Manage and update details for the kids in your care." FontSize="16" Foreground="#E2E8F0" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" BorderThickness="0">
            <WrapPanel x:Name="KidsContainer" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       Margin="20,0,20,40" />
        </ScrollViewer>

    </Grid>
</Page>