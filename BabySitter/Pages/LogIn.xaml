<Page x:Class="BabySitter.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="420"
      Title="LogIn">

    <Grid Background="#FFF7F7FB">

        <!-- Background image (שים תמונה בתיקייה Assets בשם bg.jpg) -->
        <!--<Grid.Background>
            <ImageBrush ImageSource="/Images/WhatsApp Image 2026-01-06 at 12.20.28 (1).jpeg"
                        Opacity="0.22"/>
        </Grid.Background>-->

        <!-- Baby pink/blue overlay -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#66FFD1E8" Offset="0"/>
                    <GradientStop Color="#66CFE8FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Card -->
        <Border Margin="22"
                CornerRadius="28"
                Background="#F8FFFFFF"
                BorderBrush="#22FFFFFF"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,26,0,10" HorizontalAlignment="Center">
                    <TextBlock Text="BabySitter"
                               FontSize="34"
                               FontWeight="Bold"
                               Foreground="#FF2B2B2B"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Log in to continue"
                               FontSize="13"
                               Foreground="#88000000"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Form -->
                <StackPanel Grid.Row="1" Margin="18,14,18,10" VerticalAlignment="Center">

                    <TextBlock Text="User" FontSize="13" Foreground="#AA000000" Margin="2,0,0,6"/>
                    <Border CornerRadius="14" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1">
                        <TextBox x:Name="tbUser"
                                 Height="46"
                                 Padding="14,0"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Foreground="#FF222222"/>
                    </Border>

                    <TextBlock Text="Password" FontSize="13" Foreground="#AA000000" Margin="2,14,0,6"/>
                    <Border CornerRadius="14" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1">
                        <PasswordBox x:Name="pbPass"
                                     Height="46"
                                     Padding="14,0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Log In button -->
                    <Button x:Name="btnLog"
                            Content="Log In"
                            Height="48"
                            Margin="0,18,0,0"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFFF7BB5" Offset="0"/>
                                <GradientStop Color="#FF7CCBFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="16" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="Kids-friendly babysitting 💗"
                               FontSize="12"
                               Foreground="#77000000"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Bottom: Sign In + small images -->
                <StackPanel Grid.Row="2" Margin="18,10,18,18" HorizontalAlignment="Center">

                    <!-- Sign In button (כרגע רק כפתור) -->
                    <Button x:Name="btnSign"
                            Content="Sign In"
                            Height="42"
                            Width="160"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#FF2B2B2B"
                            Background="#FFFFFFFF"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="14"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Small images (שים את 3 התמונות בתיקייה Assets) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,0">
                        <Border CornerRadius="12" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1" Padding="6" Margin="4,0">
                            <Image Width="52" Height="52" Stretch="Uniform"
                                   Source="/Images/WhatsApp Image 2026-01-06 at 12.20.28.jpeg"/>
                        </Border>

                        <Border CornerRadius="12" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1" Padding="6" Margin="4,0">
                            <Image Width="52" Height="52" Stretch="Uniform"
                                       Source="/Images/WhatsApp Image 2026-01-06 at 12.20.29.jpeg"/>
                        </Border>

                        <Border CornerRadius="12" Background="#FFFFFFFF" BorderBrush="#22000000" BorderThickness="1" Padding="6" Margin="4,0">
                            <Image Width="52" Height="52" Stretch="Uniform"
                                   Source="/Images/WhatsApp Image 2026-01-06 at 12.20.28 (1).jpeg"/>
                        </Border>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>