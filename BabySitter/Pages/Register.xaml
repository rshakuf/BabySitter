<Page x:Class="BabySitter.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BabySitter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Register" FontFamily="Segoe UI Variable Display">

    <Page.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/RegisterBack.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="SIGN UP" FontSize="14" FontWeight="Bold" Foreground="Black" 
                   Margin="0,45,60,0" VerticalAlignment="Top" HorizontalAlignment="Right" 
                   Cursor="Hand" TextDecorations="Underline"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="516" Height="407">
            <TextBlock Text="Parent Sign up" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <UniformGrid Columns="3" Margin="0,0,0,20">
                <StackPanel Margin="10,0">
                    <TextBlock Text="First Name" Margin="5,0,0,5" FontSize="18"/>
                    <TextBox Style="{StaticResource RoundedTextBox}"/>
                </StackPanel>
                <StackPanel Margin="10,0">
                    <TextBlock Text="Last name" Margin="5,0,0,5" FontSize="18"/>
                    <TextBox Style="{StaticResource RoundedTextBox}"/>
                </StackPanel>
                <StackPanel Margin="10,0">
                    <TextBlock Text="Date of birth" Margin="5,0,0,5" FontSize="18"/>
                    <TextBox Style="{StaticResource RoundedTextBox}"/>
                </StackPanel>
            </UniformGrid>

            <UniformGrid Columns="2" Margin="0,0,0,20">
                <StackPanel Margin="40,0">
                    <TextBlock Text="City name" Margin="5,0,0,5" FontSize="18"/>
                    <TextBox Style="{StaticResource RoundedTextBox}"/>
                </StackPanel>
                <StackPanel Margin="40,0">
                    <TextBlock Text="Number of kids" Margin="5,0,0,5" FontSize="18"/>
                    <TextBox Style="{StaticResource RoundedTextBox}"/>
                </StackPanel>
            </UniformGrid>

            <UniformGrid Columns="2" Margin="0,0,0,30" >
                <StackPanel Margin="40,0">
                    <TextBlock Text="Password" Margin="5,0,0,5" FontSize="18"/>
                    <PasswordBox Style="{StaticResource RoundedPasswordBox}"/>
                </StackPanel>
                <StackPanel Margin="40,0">
                    <TextBlock Text="Confirm Password" Margin="5,0,0,5" FontSize="18"/>
                    <PasswordBox Style="{StaticResource RoundedPasswordBox}"/>
                </StackPanel>
            </UniformGrid>

            <Button Content="Create Account" Background="Black" Foreground="White" 
                    Width="160" Height="40"  Cursor="Hand" Margin="0,0,0,10" FontSize="18">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Text="or Log in" HorizontalAlignment="Center" Cursor="Hand" Opacity="0.8" FontSize="18" MouseLeftButtonDown="LogIn_Click"/>
        </StackPanel>
    </Grid>
</Page>